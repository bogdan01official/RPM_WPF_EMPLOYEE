<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Управление персоналом" Height="550" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Background="#FFDDDDDD">
            <Button Content="Главная страница" Click="HomePageButton_Click" Height="50px"/>
            <Button Content="Список сотрудников" Click="EmployeeListButton_Click" Height="50"/>
        </StackPanel>
        <Frame x:Name="MainFrame" Grid.Column="1"/>
    </Grid>
</Window>
